<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexis.gogame.MainActivity"
    android:background="#F4A460"
    >

    <TextView
        android:id="@+id/tv_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <com.example.alexis.gogame.CustomView
        android:id="@+id/board_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_turn"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/board_id"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentStart="true"
            android:background="@android:color/black"
            android:layout_marginBottom="10sp"/>


        <ImageView
            android:id="@+id/test"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10sp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_centerHorizontal="true"
            android:text="@string/timer"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/black_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/territories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/black_timer"
            android:layout_centerHorizontal="true"
            android:text="@string/territories"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/black_territories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/black_timer"
            android:layout_alignParentStart="true"
            android:text="10"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/white_territories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/black_timer"
            android:layout_alignParentEnd="true"
            android:text="20"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />



        <TextView
            android:id="@+id/pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/territories"
            android:layout_centerHorizontal="true"
            android:text="@string/pieces"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/black_pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/territories"
            android:layout_alignParentStart="true"
            android:text="30"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/white_pieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/territories"
            android:layout_alignParentEnd ="true"
            android:text="40"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pieces"
            android:layout_centerHorizontal="true"
            android:text="@string/score"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/black_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pieces"
            android:layout_alignParentStart="true"
            android:text="50"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/white_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pieces"
            android:layout_alignParentEnd ="true"
            android:text="60"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />



        <TextView
            android:id="@+id/white_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/test"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            />

    </RelativeLayout>
</RelativeLayout>

